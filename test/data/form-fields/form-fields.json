{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.kalisio.xyz/schemas/saisie.json#",
  "title": "Données",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "field": {
        "component": "form/KTextField",
        "label": "Identifiant"
      }
    },
    "nom": {
      "type": "string",
      "field": {
        "component": "form/KTextField",
        "label": "Nom"
      }
    },
    "information": {
      "type": "string",
      "field": {
        "component": "form/KTextareaField",
        "label": "Information"
      }
    },
    "option": {
      "type": "string",
      "field": {
        "component": "form/KSelectField",
        "label": "Option",
        "options": [
          { "label": "La réponse A", "value": "A" },
          { "label": "La réponse B", "value": "B" }
        ]
      }
    },
    "number": {
      "type": "number",
      "field": {
        "component": "form/KNumberField",
        "label": "Number"
      }
    }
  },
  "required": ["id"]
}